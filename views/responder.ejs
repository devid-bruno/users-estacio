<%- include('partials/index'); %>

<div class="container">
<hr>
    <form action="/addresponse" method="post">
        <div class="card">
            <h5 class="card-header"><%= question.title  %> </h5>
            <div class="card-body">
              <h5 class="card-title"><%= question.question  %></h5>
            </div>
          </div>
          <br>
          <hr>
          <h1>Adicione a sua resposta:</h1>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="response">
            <input type="hidden" name="questionId" value="<%= question.id %>">
          </div>
          <br>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-success">Enviar Resposta</button>
          </div>
        </div>
      </form>
<hr>
<h1>Respostas</h1>
<% response.forEach(response => {  %>
    <div class="container text-center">
      <div class="row">
        <div class="card">
          <div class="card-body">
            <div class="col-6 col-sm-4"><h5><%= response.response %></h5></div>
          </div>
        </div>
      </div>
    </div>
  
  <% }) %> 
</div>

<%- include('partials/footer'); %>